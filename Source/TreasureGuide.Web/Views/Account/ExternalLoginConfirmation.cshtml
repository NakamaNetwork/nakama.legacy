@using TreasureGuide.Web.Helpers
@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <h5>
        You've successfully authorized your <strong>@ViewData["LoginProvider"]</strong> account.
    </h5>
    <h6>
        Please select a UserName and Email Address for Nakama Network below to finish registration.
    </h6>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert _danger">
        @ViewData.ModelState.ConcatErrors()
    </div>
}
<form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="_alignLeft">
    <div class="row">
        <fieldset>
            <div class="form-group">
                <label asp-for="UserName">
                    <i class="fa fa-fw fa-user"></i>
                    User Name
                </label>
                <input asp-for="UserName" type="text" class="_width100" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">
                    <i class="fa fa-fw fa-envelope"></i>
                    Email
                </label>
                <input asp-for="Email" type="email" class="_width100" />
                <span asp-validation-for="Email"></span>
            </div>
        </fieldset>
    </div>
    <div clas="row">
        <fieldset>
            <div class="form-group">
                <label asp-for="ToS">
                    <input asp-for="ToS" type="checkbox" />
                    <span class="-label-body">I agree to the <a href="/#/tos" target="_blank">Terms of Service</a></span>
                </label>
                <span asp-validation-for="ToS"></span>
            </div>
            <div class="form-group">
                <label asp-for="Privacy">
                    <input asp-for="Privacy" type="checkbox" />
                    <span class="-label-body">I agree to the <a href="/#/privacy" target="_blank">Privacy Policy</a></span>
                </label>
                <span asp-validation-for="Privacy"></span>
            </div>
        </fieldset>
    </div>
    <div class="row">
        <button class="button _primary _floatRight" type="submit">
            Register
        </button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
